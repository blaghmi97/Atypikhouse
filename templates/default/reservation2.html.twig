{% extends 'base.html.twig' %}



{% block body %}
<div class="container">
<br>
<div class="card border-primary mb-3" >
        <div class="card-header">Résérvation : <small>{{ reservation.dateReservation|date('d-m-Y H:i') }}</small></span></strong></div>
            <div class="card-body">
        <div class="row">
           <div class="col-md-2 col-3">
              <div class="form-group">
                 <label class="h5">- Titre :</label>
              </div>
            </div>
        <div class="col-md-10 col-9">
         <div class="form-group">
           <label class="h5">{{ reservation.habitat.titre }}</label>
         </div>
        </div>
        </div>
     

<div id="carouselExemple" class="carousel slide" data-ride="carousel" data-interval="3000">

        <ol class="carousel-indicators">
       
         {% for index,photo in reservation.habitat.photos %}
        <li data-target="#carouselExemple" data-slide-to="{{index}}" class="{% if index == 0 %}  active {% endif %}"></li>
         {% endfor %}
         </ol>

        <div class="carousel-inner">

          {% for index,photo in reservation.habitat.photos %}
    
      <div class="carousel-item {% if index == 0 %}  active {% endif %}" >
           
        <img src="{{ asset('uploads/images/' ~ photo.Src ) }}" class="d-block w-100" alt="{{index }}" style="width:850px; height:400px ;">
      </div>
    {% endfor %}
   
    {% if reservation.habitat.photos is empty %}
       <div class="carousel-item active" >
      <img src="{{ asset('uploads/images/no-image.png' ) }}" class="d-block w-100" alt="" style="width:850px; height:400px ;">
      </div>
   {% endif %}


        </div>
        <a href="#carouselExemple" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="ture"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a href="#carouselExemple" class="carousel-control-next" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
<hr>
<br>
        <div class="row">
           <div class="col-md-3 col-6">
              <div class="form-group">
                 <label class="h6">- Type d'habitat :</label>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <div class="form-group">
               <p >{{ reservation.habitat.type }}</p>
              </div>
            </div>
           <div class="col-md-3 col-6">
             <div class="form-group">
               <label class="h6">- Nombre de couchage :</label>
             </div>
           </div>
           <div class="col-md-3 col-6">
             <div class="form-group">
               <p>{{ reservation.habitat.nombreCouchage }}</p>
             </div>
           </div>
        </div>
        

                <div class="row">
        <div class="col-md-3 col-3">
         <div class="form-group">
           <label class="h6">- Surface :</label>
         </div>
        </div>
         <div class="col-md-3 col-3">
         <div class="form-group">
           <p>{{ reservation.habitat.surface }} m2</p>
         </div>
        </div>
          <div class="col-md-3 col-3">
         <div class="form-group">
           <label class="h6">- Prix :</label>
         </div>
        </div>
         <div class="col-md-3 col-3">
         <div class="form-group">
           <p>{{ reservation.habitat.prix }}  €.</p>
         </div>
        </div>
        </div>
        <div class="row">
        <div class="col-md-3 col-3">
         <div class="form-group">
           <label class="h6">-Adresse :</label>
         </div>
        </div>
        <div class="col-md-9 col-9">
         <div class="form-group">
           <p>{{ reservation.habitat.adresse }}</p>
         </div>
        </div>
        </div>

<hr>
<div class="row">
        <div class="col-md-3 col-6">
         <div class="form-group">
           <label class="h6">- Date Début :</label>
         </div>
        </div>
         <div class="col-md-3 col-6">
         <div class="form-group">
           <p>{{ reservation.dateDebut|date('d-m-Y') }}</p>
         </div>
        </div>
          <div class="col-md-3 col-6">
         <div class="form-group">
           <label class="h6">- Date Fin :</label>
         </div>
        </div>
         <div class="col-md-3 col-6">
         <div class="form-group">
           <p>{{ reservation.dateFin|date('d-m-Y') }}</p>
         </div>
        </div>
        </div>
        <div class="row">
        <div class="col-md-3 col-6">
         <div class="form-group">
           <label class="h6">- Nombre des jours :</label>
         </div>
        </div>
         <div class="col-md-3 col-6">
         <div class="form-group">
           <p>{{ reservation.nombreNuit }} Jours</p>
         </div>
        </div>
          <div class="col-md-3 col-6">
         <div class="form-group">
           <label class="h6">- Prix totale :</label>
         </div>
        </div>
         <div class="col-md-3 col-6">
         <div class="form-group">
           <p>{{ reservation.prixTotal }}  €.</p>
         </div>
        </div>
        </div>
<hr>
   <div class="row">
   <div class="col-md-4 col-4">
        
                <a class="btn btn-success btn-block" href="{{path('commenter',{'id':reservation.id})}}">Commenter</a>
    </div>
   <div class="col-md-4 col-4">
        
                <a class="btn btn-success btn-block" href="{{path('newprisedevue',{'id':reservation.id})}}">Prise de vue</a>
    </div>
    <div class="col-md-4 col-4">
               {{ form_start(delete_form) }}
                <input class="btn btn-danger btn-block" type="submit" value="Annuler">
            {{ form_end(delete_form) }}
   </div>

    </div>
    
</div>
</div>
</div>
{% endblock %}


 {% block javascripts %}

 {% endblock %}

