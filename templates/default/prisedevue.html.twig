{% extends 'base.html.twig' %}

{% block body %}
   
<div class="container">
<br>

<div class="card border-info mb-3" >
  <div class="card-header"><strong >{{ habitat.user.username }} : </strong> <span style="align="right""> <small>{{ habitat.datePub|date('d-m-Y H:i') }}</small></span></strong></div>
  <div class="card-body">

        <div class="row">
           <div class="col-md-2">
              <div class="form-group">
                 <label class="h5">- Titre :</label>
              </div>
            </div>
        <div class="col-md-10">
         <div class="form-group">
           <label class="h5">{{ habitat.titre }}</label>
         </div>
        </div>
        </div>
     

<div id="carouselExemple" class="carousel slide" data-ride="carousel" data-interval="3000">

        <ol class="carousel-indicators">
       
         {% for index,photo in habitat.photos %}
        <li data-target="#carouselExemple" data-slide-to="{{index}}" class="{% if index == 0 %}  active {% endif %}"></li>
         {% endfor %}
         </ol>

        <div class="carousel-inner">

          {% for index,photo in habitat.photos %}
    
      <div class="carousel-item {% if index == 0 %}  active {% endif %}" >
           
        <img src="{{ asset('uploads/images/' ~ photo.Src ) }}" class="d-block w-100" alt="{{index }}" style="width:850px; height:400px ;">
      </div>
    {% endfor %}
   
    {% if habitat.photos is empty %}
       <div class="carousel-item active" >
      <img src="{{ asset('uploads/images/no-image.png' ) }}" class="d-block w-100" alt="" style="width:850px; height:400px ;">
      </div>
   {% endif %}


        </div>
        <a href="#carouselExemple" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="ture"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a href="#carouselExemple" class="carousel-control-next" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
<hr>
<br>
        <div class="row">
           <div class="col-md-3">
              <div class="form-group">
                 <label class="h6">- Type d'habitat :</label>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
               <p >{{ habitat.type }}</p>
              </div>
            </div>
           <div class="col-md-3">
             <div class="form-group">
               <label class="h6">- Nombre de couchage :</label>
             </div>
           </div>
           <div class="col-md-3">
             <div class="form-group">
               <p>{{ habitat.nombreCouchage }}</p>
             </div>
           </div>
        </div>
        

                <div class="row">
        <div class="col-md-3">
         <div class="form-group">
           <label class="h6">- Surface :</label>
         </div>
        </div>
         <div class="col-md-3">
         <div class="form-group">
           <p>{{ habitat.surface }} m2</p>
         </div>
        </div>
          <div class="col-md-3">
         <div class="form-group">
           <label class="h6">- Prix :</label>
         </div>
        </div>
         <div class="col-md-3">
         <div class="form-group">
           <p>{{ habitat.prix }}  â‚¬.</p>
         </div>
        </div>
        </div>
        <div class="row">
        <div class="col-md-3">
         <div class="form-group">
           <label class="h6">-Adresse :</label>
         </div>
        </div>
        <div class="col-md-9">
         <div class="form-group">
           <p>{{ habitat.adresse }}</p>
         </div>
        </div>
        </div>
        <div class="row">
        <div class="col-md-3">
         <div class="form-group">
           <label class="h6">- Description :</label>
         </div>
        </div>
        <div class="col-md-9">
         <div class="form-group">
           <p>{{ habitat.description }}</p>
         </div>
        </div>
        </div>
<hr>
      <div class="row">
        <div class="col-md-12">
         {{ form_start(form) }}
         <div class="form-group">
   
               {{ form_widget(form.commentaire,{'attr' : {'class':'form-control'}}) }}
                 
        </div>
         <div class="form-group">
   
               {{ form_widget(form.photos2.source,{'attr' : {'class':'form-control'}}) }}
                 
        </div>
        </div>
      </div>
        <div class="row">
        <div class="col-md-12">
        <input class="btn btn-success btn-block" type="submit" value="Commenter" />
    {{ form_end(form) }}
    </div> 
    </div>       
 </div>
    </div>      
</div>
    </div>
</div>
</div>
   
{% endblock %}